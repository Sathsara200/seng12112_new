{
  "name": "dilagro-api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dilagro-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/dilagro-api",
        "assets": [
          {
            "input": "apps/dilagro-api/environments",
            "glob": "*.env",
            "output": "environments"
          }
        ]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        },
        "production": {
          "args": ["--node-env=production"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "dilagro-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "dilagro-api:build:development"
        },
        "production": {
          "buildTarget": "dilagro-api:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/dilagro-api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
